#%Module1.0
proc ModulesHelp { } {
        global dotversion
        puts stderr " Intel(R) MKL Library"
}

module-whatis       "Sets up the Intel(R) MKL Library environment"

conflict	ompi mpich

set                topdir                 /opt/intel/psxe_runtime_2020.0.8/linux
set		   tbbdir		  $topdir/tbb
set		   compilerdir		  $topdir/compiler
set		   mkldir		  $topdir/mkl
setenv		   MKLROOT		  $mkldir
setenv             CPATH	          $mkldir/include
setenv		   NLSPATH		  $mkldir/lib/intel64_lin/locale/%l_%t/%N
setenv		   PKG_CONFIG_PATH	  $mkldir/bin/pkgconfig
prepend-path        LD_LIBRARY_PATH        $tbbdir/lib/intel64_lin/gcc4.1:$mkldir/lib/intel64_lin:$tbbdir/lib/intel64_lin/gcc4.7:$compilerdir/lib/intel64_lin
prepend-path        LIBRARY_PATH           $tbbdir/lib/intel64_lin/gcc4.1:$mkldir/lib/intel64_lin:$tbbdir/lib/intel64_lin/gcc4.7:$compilerdir/lib/intel64_lin
